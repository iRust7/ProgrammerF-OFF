window.addEventListener("scroll", function() {
    const hiddenMessage = document.querySelector(".hidden-message");
    if (window.scrollY > window.innerHeight * 0.9) { 
        hiddenMessage.style.opacity = "1";
    } else {
        hiddenMessage.style.opacity = "0";
    }
});

let hasPlayed = false; 

window.addEventListener("scroll", function() {
    let trollText = document.querySelector(".hidden-message"); 
    let audio = document.getElementById("trollAudio");

    if (trollText.getBoundingClientRect().top < window.innerHeight && !hasPlayed) {
        audio.play().catch(err => console.log("Autoplay diblokir, user harus interaksi dulu."));
        hasPlayed = true;
    }
});
